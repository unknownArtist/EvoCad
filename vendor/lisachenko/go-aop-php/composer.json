{
    "name": "lisachenko/go-aop-php",
    "description": "Library for aspect-oriented programming in PHP.",

    "type": "library",
    "keywords": ["library", "aop", "php", "aspect"],
    "homepage": "http://go.aopphp.com/",
    "license": "MIT",

    "require": {
        "php": ">=5.3.0",
        "andrewsville/php-token-reflection": "~1.3",
        "jakubledl/dissect": "~1.0",
        "doctrine/annotations": "~1.0"
    },

    "require-dev": {
        "symfony/console": "~2"
    },

    "suggest": {
        "symfony/console": "for the command-line tool"
    },

    "bin": ["bin/warmup"],
    "authors": [
        {
            "name": "Lissachenko Alexander",
            "homepage": "https://github.com/lisachenko"
        }
    ],

    "autoload": {
        "psr-0": {
            "Go": "src/"
        },
        "files": ["src/Go/Instrument/ClassLoading/AopComposerLoader.php"]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.4-dev"
        }
    }
}
